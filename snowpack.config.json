{
  "mount": {
    "src/scripts": {
      "url": "/scripts"
    },
    "src/styles": {
      "url": "/styles"
    },
    "src/pages": {
      "url": "/"
    },
    "src/assets": {
      "url": "/assets",
      "static": true
    }
  },
  "plugins": [
    "@snowpack/plugin-webpack",
    "@snowpack/plugin-sass",
    "snowpack-plugin-nunjucks"
  ],
  "optimize": {
    "bundle": true,
    "minify": true
  },
  "alias": {
    "scripts": "./src/scripts",
    "assets": "./src/assets"
  }
}
